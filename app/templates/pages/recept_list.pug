extends ../layouts/default.pug

include ../modules/forms.pug
include ../modules/footer.pug
include ../modules/header.pug

block variables
 -var pageTitle='Рецепты'

mixin recept-slider(json)
  each data in json
    a.recepts-box-slider-card.page-card.visual-animation-base-block(href=data.link)
      img(src="./images/" + data.image, alt=data.title).fullImg
      .recepts-box-slider-card-text
        p.title #{data.title}
        p.time #{data.time}
          +icon('timer', 'svg')

block content
  +header()
  section.main-recepts 
    .content.main-recepts-box
      .recepts-header
        h2.visual-animation-base Рецепты
      .recepts-wrapper
        .text-left Рецепты
        .recepts-wrapper-content#insertTargetFilter
          +recept-slider(getData('sliders/recepts'))
        form.recepts-wrapper-list.visual-animation-base-block#filterForm
          .list-group
            .list-group-title Категория:
            .list-group-selection
              +checkbox('all', 'category', 'Все')
              +checkbox('snacks', 'category', 'Закуски')
              +checkbox('salads', 'category', 'Салаты')
              +checkbox('backing', 'category', 'Выпечка')
              +checkbox('hot', 'category', 'Горячие блюда')
            .mob_row
              +link('Применить', '#')#accept
              button.clear#clearFilter Сбросить фильтр
          .list-group
            .list-group-title Продукт:
            .list-group-selection.product-select
              +checkbox('1', 'product', 'Сыр «Косичка» «Гиагинский» копченый')
              +checkbox('2', 'product', 'Сыр «Косичка» «Гиагинский»')
              +checkbox('3', 'product', 'Сыр «Охотничий» «Гиагинский» копченый')
              +checkbox('4', 'product', 'Сыр «Спагетти» «Гиагинский» копченый')
              +checkbox('5', 'product', 'Сыр «Спагетти» «Гиагинский»')

              +checkbox('6', 'product', 'Сыр «Адыгейский»')
              +checkbox('7', 'product', 'Сыр «Адыгейский» копченый')
              +checkbox('8', 'product', 'Сыр «Адыгейский Домашний»')
              +checkbox('9', 'product', 'Сыр «Сулугуни»')
              +checkbox('10', 'product', 'Сыр «Чечил»')
              +checkbox('11', 'product', 'Сыр «Чечил» копченый')
              +checkbox('12', 'product', 'Сыр «Охотничий» копченый')
              +checkbox('13', 'product', 'Сыр «Косичка» копченый Дарфреш')
              button.display-full Показать Все
            .mob_row
              +link('Применить', '#')#accept
              button.clear#clearFilter Сбросить фильтр
          button.clear#clearFilter Сбросить фильтр
  +subscriptionForm().bg-additional
  +footer().bg-additional