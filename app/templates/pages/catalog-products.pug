extends ../layouts/default.pug

include ../modules/forms.pug
include ../modules/footer.pug
include ../modules/header.pug

block variables
 -var pageTitle='Вытяжные'

block content
    +header()
    section.main-products
      canvas.main-catalog-products-dashed(width="100%", height="100%")
      .content.main-products-box
        span.title-page Вытяжные
        .main-products-category.visual-animation-base-block
          a.main-products-category-el(href="#")
            .category-el-icon
              +icon('img-catalog-product-1', 'svg').icon-background
              .icon-active-bg
            .category-el-title Адыгейские сыры
          a.main-products-category-el.active(href="#")
            .category-el-icon
              +icon('img-catalog-product-2', 'svg').icon-background
              .icon-active-bg
            .category-el-title Вытяжные сыры
          a.main-products-category-el(href="#")
            .category-el-icon
              +icon('catalog-product-3', 'png').icon-background
              .icon-active-bg
            .category-el-title Масло и спред
          a.main-products-category-el(href="#")
            .category-el-icon
              +icon('img-catalog-product-4', 'svg').icon-background
              .icon-active-bg
            .category-el-title Сыворотка
            
        .main-products-items
          a.products-el(href="./product.html.html")
            .products-el-img.visual-animation-base-block
              img(src="./images/img-products-1-min.png")
              img(src="./images/img-products-1-min.png")
