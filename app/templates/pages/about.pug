extends ../layouts/default.pug

include ../modules/forms.pug
include ../modules/header.pug
include ../modules/footer.pug
include ../modules/about.pug

block variables
 -var pageTitle='О нас'
 -var selectPage = '#about'

mixin slider-about-container-el(json)
  each data in json
    .slider-about-container-el.swiper-slide
      .description
        .description-title #{data.title}
        .description-text #{data.text}
      .image
        img(src=data.img)
        .image-date
          span.back #{data.back_time}
          span.front #{data.front_time}

mixin main-partners-box-nav-el(json)
  each data in json
    if(data.link == selectPage)
      a.main-partners-box-nav-link(href=data.link).active #{data.title}
    else
      a.main-partners-box-nav-link(href=data.link) #{data.title}

block content
  +header()
  section.main-partners#main-partners.waveSection-bottom(data-color="#f6f5f3").bg-additional
    .content.main-partners-box
      .main-partners-box-nav
        +main-partners-box-nav-el(getData('pages/partners/main'))
      .main-about-header
        canvas.about-dashed(width="100%", height="100%")
        h2.visual-animation-base.main-about-header-description Мы хотим привить миллионам людей вести здоровый образ жизни, донести до каждого чистоту горного воздуха и воды в наших сырах.
        .image.visual-animation-base-block
          img(src="./images/main-about-bg.png")
          +icon('print-main', 'svg').print.scrollRotate
  section.main-about-info
    .content 
      .main-about-info-box.visual-animation-base-block
        .about-info-el.gifimage 
          img(src="./images/cheese.gif")
        .about-info-el.smallboldtext Гордимся местом, <br>в котором живём и доносим это через наш продукт.
        .about-info-el.bigboldtext Самое главное для нас - 
          span люди.
        .about-info-el.smalltext Ведь наш продукт на 80% сделан руками людей, которые многие века перенимали ремесло домашних сыроделов.
  section.main-about-persons
    .content.visual-animation-base-block
      img(src="./images/about-persons-bg.svg", alt="Персонажи")
  section.main-about-slider
    .content.main-about-slider-box
      h2.visual-animation-base История завода
      .visual-animation-base-block
        .slider-about-box.swiper-container
          .slider-about-control
            .buttons.main-slider-buttons
              +btn-slider('left').bg-additional#slider-about-left
              +btn-slider('right').bg-additional#slider-about-right
            .dates.swiper-container
              .swiper-wrapper
                button.date-btn.swiper-slide 1949
                button.date-btn.swiper-slide 1968
                button.date-btn.swiper-slide 1979
                button.date-btn.swiper-slide 1988
                button.date-btn.swiper-slide 1999
                button.date-btn.swiper-slide 2006
                button.date-btn.swiper-slide 2010
                button.date-btn.swiper-slide 2020
          .slider-about-container.swiper-wrapper
            +slider-about-container-el(getData('sliders/about'))
  section.main-about-awards
    .content.main-about-awards-box
      .main-about-awards-header
        h2.visual-animation-base Наши награды
        .visual-animation-base-block
          .buttons.main-slider-buttons
            +btn-slider('left').bg-additional#slider-awards-left
            +btn-slider('right').bg-additional#slider-awards-right
      .main-about-awards-content.swiper-container
        .swiper-wrapper
          .slider-awards-el.swiper-slide
            .award-data
              +icon('medal-icon-1', 'svg').medal
              .time-medal 2019
            .description-award
              .title Выставка «Золотая осень» г. Москва
              +link('Сыр Косичка «Гиагинский» копченый', '#', 'true')

          .slider-awards-el.swiper-slide
            .award-data
              +icon('medal-icon-2', 'svg').medal
              .time-medal 2019
            .description-award
              .title Всероссийский смотр-конкурс «Функциональные молочные продукты»
              +link('Сыр «Адыгейский»', '#', 'true')

          .slider-awards-el.swiper-slide
            .award-data
              +icon('medal-icon-3', 'svg').medal
              .time-medal 2019
            .description-award
              .title I Международный форум «Салон сыра»
              +link('Сыр Косичка «Гиагинский» копченый', '#', 'true')
  +about('Партнерам', './partners.html').bg-white.about-invert.visual-animation-base-block
  +subscriptionForm().bg-white
  +footer().bg-white