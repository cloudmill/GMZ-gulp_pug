extends ../layouts/default.pug

include ../modules/header.pug
include ../modules/footer.pug
include ../modules/recepts.pug
include ../modules/forms.pug

block variables
  -var pageTitle='Главная'

mixin main-slider(json)
  each data in json
    .main-index-box-slider-el.swiper-slide
      .main-index-box-slider-el-left
        img(src=data.icon)
        .shadow
        .addons
          +icon('rhombus', 'svg').rhombus-1
          +icon('rhombus', 'svg').rhombus-2
          +icon('cheese', 'svg').cheese
      .main-index-box-slider-el-right
        h2z #{data.title}
        p #{data.text}
        +link('Подробнее', data.link, 'true')

block content
  +header()
  section.main-index#main-index.waveSection-bottom-clip(data-color="#ffffff")
    .main-index-backgound
    .main-index-animeel
      +icon('cloud-1', 'svg').cloud-left-1
      +icon('cloud-2', 'svg').cloud-left-2
      +icon('cloud-2', 'svg').cloud-left-3
      +icon('cloud-3', 'svg').cloud-right-1
    .content.main-index-box
      .main-index-box-slider
        .swiper-wrapper
          +main-slider(getData('sliders/main'))
    .main-index-box-control
      .main-index-box-control-arrows.main-slider-buttons
        +btn-slider('left').bg-white#slider-main-left
        +btn-slider('right').bg-white#slider-main-right
      .main-index-box-control-items
  +recepts()
  section.promo.bg-additional.waveSection(data-color="#f6f5f3")
    .content.promo-box
      .promo-box-top
        canvas.promo-dashed(width="737", height="648")
        .top-left
          img.mouseParalax(src="./images/promo-box-top.svg" alt="Персонажи")
          +icon('promo-box-top-text', 'svg')
        .top-right
          h2 Эксклюзивное право <br>на производство адыгейского сыра
          p НМПТ гарантирует сохранение оригинальной рецептуры и точного следования технологии производства.
          .tooltip.tooltip--cora(data-type="cora")
            .tooltip__trigger(role="tooltip", aria-describedby="info-cora")
                +link('Что такое НМПТ', '#', 'false')
            .tooltip__base
                svg.tooltip__shape(width="375", height="275", viewBox="0 0 375 275")
                    path(opacity="0.97", fill-rule="evenodd", fill="#312930", d="M375 0L0 40.5669L24.7333 266.5H173.92L186 275L198.08 266.5H342.067L375 0Z")
                .tooltip__content#info-cora
                  span НМПТ – это обозначение, представляющее или содержащее наименование географического объекта, ставшее известным в результате его использования в отношении товара, особые свойства которого исключительно (или главным образом) определяются природными условиями и (или) людскими факторами, ­характерными для этого географического объекта.
      .promo-box-bottom
        .bottom-img
          +icon('print-main', 'svg').scrollRotate
          .mountains
            img.mouseParalax(src="./images/mountains.png" alt="ГоРы")
            .mountains-cheese.mouseParalax
              img(src="./images/shadow-products.svg" alt="")
            +icon('rhombus', 'svg').rhombus-1.mouseParalax
            +icon('rhombus', 'svg').rhombus-2.mouseParalax
        .bottom-text
          h2 Наша продукция изготавливается <br>в экологически чистом регионе <br>из отборного коровьего молока
          .text-desc
            p Мы остаемся верны традициям, соблюдая оригинальную рецептуру.
            p Продукция изготавливается вручную лучшими 
              span мастерами-сыроделами.
            p Именно это отличает настоящий адыгейский сыр от аналогов из других регионов страны.
  section.news
    .content.news-box
      .news-header
        h2.page-title Новости
        +link('Все новости', './news_list.html', 'true')
      .news-row
        a.news-item(style="--color_rect: #FFF3D6" 
          href="./news_list.html")
          .news-item-image
            img(src="./images/news-background-1.jpg" alt="Новость 1")
          .news-content
            .news-time 25.05. 
              span 2019
            .news-text Молочный завод «Янино» стал участником благотворительного новогоднего мероприятия «завтрак в манеже»
        a.news-item(href="./news_list.html")
          .news-content
            .news-time 25.05. 
              span 2019
            .news-text Молочный завод «Янино» стал участником благотворительного новогоднего мероприятия «завтрак в манеже»
        a.news-item(href="./news_list.html")
          .news-content
            .news-time 25.05. 
              span 2019
            .news-text Молочный завод «Янино» стал участником благотворительного новогоднего мероприятия «завтрак в манеже»

  +subscriptionForm().bg-white
  +footer().bg-white