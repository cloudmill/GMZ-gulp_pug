mixin textarea(id_param, cols_param, rows_param, label_text, label_addon)
  .main-field
    textarea(name=id_param, id=id_param cols=cols_param, rows=rows_param)
    label(for=id_param class="main-field-name") #{label_text}
    if(label_addon != '')
      label(for=id_param class="main-field-addon") #{label_addon}