mixin selectField(name,placeholder,options)
  .main-field.main-field-select
    select.select2-field(name=name placeholder=placeholder)
      each option in options
        option(value=option)= option
mixin inputField(type_param, id_param, label, binding = true)
  .main-field
    if(binding == true)
      input(type=type_param name=id_param id=id_param placeholder=label required)&attributes(attributes)
    else
      input(type=type_param name=id_param id=id_param placeholder=label)&attributes(attributes)
      if(binding)
        label(for=id_param class="main-field-addon") #{binding}
      else if (binding != false)
        label(for=id_param class="main-field-addon") Необязательно
    .main-field-error Поле заполнено неверно

    //- inputField({тип поля ввода}, {имя поля}, {заголовок}, {обязательное ли поле (можно передать "null" или слово которое нужно вывести вместо "Необязательно","false" - не выводит слово)})

mixin textarea(id_param, cols_param, rows_param, label_text, label_addon)
  .main-field.visual-animation-base-block
    textarea(name=id_param, id=id_param cols=cols_param, rows=rows_param, placeholder=label_text)
    label(for=id_param class="main-field-name")
    if(label_addon != '')
      label(for=id_param class="main-field-addon") #{label_addon}

mixin checkbox(id_param, name_param, text)
  .main-checkbox
    input(type="checkbox" id=id_param name=name_param)
    label(for=id_param class="main-checkbox-name")
      +icon('checkbox', 'svg').state-default
      +icon('checkbox-hover', 'svg').state-hover
      +icon('checkbox-checked', 'svg').state-checked
      p= text

mixin link(name, link, addon)
  if(addon == 'true')
    a.main-link&attributes(attributes)(href=link) #{name}
      span.bottomLines
      span.morphPlus
  else
    a.main-link&attributes(attributes)(href=link) #{name}
      span.bottomLines


mixin btn-slider(direction)
  if(direction == 'left')
    button.left&attributes(attributes)
      span
  if(direction == 'right')
    button.right&attributes(attributes)
      span